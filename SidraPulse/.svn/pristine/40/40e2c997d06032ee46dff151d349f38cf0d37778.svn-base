<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg" >

    <RelativeLayout
        android:id="@+id/relative_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/top_bar" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn" />

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/menu_btn"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_menu"
            android:layout_toRightOf="@+id/btn_back"
            android:gravity="center"
            android:orientation="vertical" >

            <com.atomix.customview.SidraTextView
                android:id="@+id/txt_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_gallery"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="22sp"
                customview:fontName="ProximaNova-Regular.otf" />

            <com.atomix.customview.SidraTextView
                android:id="@+id/txt_view_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Browse Collections"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                customview:fontName="ProximaNova-Regular.otf" />
        </LinearLayout>
    </RelativeLayout>

    <Spinner
        android:id="@+id/spinner_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:background="@drawable/dropdown_holdar"
        android:padding="2dip"
        android:listSelector="@android:color/transparent"
        android:prompt="@string/gallery_spinner_select_year"
        android:scrollbars="none"
        android:spinnerMode="dropdown" />

    <GridView
        android:id="@+id/grid_view_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_gallery"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dip"
        android:horizontalSpacing="10sp"
        android:numColumns="2"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:verticalSpacing="10sp" >
    </GridView>

</RelativeLayout>