<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="15dp"
    android:paddingTop="0dp" >

    <ImageView
        android:id="@+id/img_view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="@color/light_gray"
        android:paddingBottom="10dp" />

    <com.atomix.customview.SidraTextView
        android:id="@+id/txt_view_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/img_view_line"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/img_view_arrow"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        android:textStyle="bold"
        customview:fontName="ProximaNova-Semibold.otf" />

    <ImageView
        android:id="@+id/img_view_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/arrow_right" />

</RelativeLayout>