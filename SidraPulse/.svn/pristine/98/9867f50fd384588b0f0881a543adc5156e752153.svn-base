<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cd_text_holdar_gray" >

    <com.atomix.customview.SidraTextView
        android:id="@+id/txt_view_email_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_top_left"
        android:layout_marginTop="10dip"
        android:maxLines="1"
        android:text="@string/email"
        customview:fontName="ProximaNova-Semibold.otf" />

    <com.atomix.customview.SidraTextView
        android:id="@+id/txt_view_office_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_view_email_name"
        android:layout_marginLeft="@dimen/margin_top_left"
        android:layout_marginTop="5dip"
        android:maxLines="1"
        android:text="@string/office"
        customview:fontName="ProximaNova-Semibold.otf" />

    <com.atomix.customview.SidraTextView
        android:id="@+id/txt_view_mobile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_view_office_name"
        android:layout_marginLeft="@dimen/margin_top_left"
        android:layout_marginTop="5dip"
        android:maxLines="1"
        android:text="@string/mobile"
        customview:fontName="ProximaNova-Semibold.otf" />

    <com.atomix.customview.SidraTextView
        android:id="@+id/txt_view_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_view_email_name"
        android:layout_marginLeft="@dimen/margin_top_left"
        android:layout_toRightOf="@+id/txt_view_mobile_name"
        customview:fontName="ProximaNova-Semibold.otf" />

    <com.atomix.customview.SidraTextView
        android:id="@+id/txt_view_office"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_view_office_name"
        android:layout_alignLeft="@+id/txt_view_email"
        android:layout_below="@+id/txt_view_email"
        customview:fontName="ProximaNova-Semibold.otf" />

    <com.atomix.customview.SidraTextView
        android:id="@+id/txt_view_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_view_mobile_name"
        android:layout_alignLeft="@+id/txt_view_office"
        android:layout_below="@+id/txt_view_office"
        customview:fontName="ProximaNova-Semibold.otf" />

</RelativeLayout>