<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="10dip" >

    <RelativeLayout
        android:id="@+id/relative_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/offers_catagory_holdar" >

        <ImageView
            android:id="@+id/img_view_offer"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter" />

        <com.atomix.customview.SidraTextView
            android:id="@+id/txt_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="15dip"
            android:layout_toRightOf="@+id/img_view_offer"
            android:ellipsize="end"
            android:maxLines="3"
            android:minLines="3"
            android:textColor="@color/color_title"
            android:textSize="@dimen/id_pass_size"
            customview:fontName="ProximaNova-Semibold.otf" />

        <com.atomix.customview.SidraTextView
            android:id="@+id/txt_view_unlit_or_longterm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_view_title"
            android:layout_below="@+id/txt_view_title"
            android:layout_marginTop="15dip"
            android:text="@string/available_until"
            android:textColor="@color/date_gray"
            android:textSize="16sp"
            customview:fontName="ProximaNova-Bold.otf" />

        <com.atomix.customview.SidraTextView
            android:id="@+id/txt_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_view_unlit_or_longterm"
            android:layout_below="@+id/txt_view_unlit_or_longterm"
            android:text="zdfkjnkzjn"
            android:textColor="@color/red"
            android:textSize="16sp"
            customview:fontName="ProximaNova-Bold.otf" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_view_favorite_or_not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/relative_main"
        android:layout_alignRight="@+id/relative_main"
        android:background="@drawable/offers_star_gray" />

</RelativeLayout>